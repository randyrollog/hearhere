<h1>Please login</h1>

<div id="super-container">

<%= form_for @user, {url:"/authentications", method:"post"} do |u| %>

  <div id="controls">
    <form class="form-horizontal" role="form">
      <div id="text-field-container">
        <div class="form-group">
          <div class="col-lg-10">
            <p>
              <%= u.text_field :user_name, placeholder: 'username' %>
            </p>
          </div>
        </div>
      </div>
      <div id="text-field-container">
        <div class="form-group">
          <div class="col-lg-10">
            <p>
              <%= u.text_field :password, placeholder: 'password' %>
            </p>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-offset-2 col-lg-10">
          <p>
            <%= u.submit "Log In" %>
          </p>
        </div>
      </div>
  </form>
  <div>
<% end %>