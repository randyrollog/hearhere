<script>
	(function () {

		var lrglogo = $('#animated_waveform, #large_logo');
		var arrow = $('#down_arrow');

		arrow.hide();

		// move the waveform on mouseenter
		lrglogo.mouseenter(function(e) {
			e.preventDefault();
			$('#animated_waveform').css("background-position-x", "-170px");
			$(this).mouseout(function(e) {
				e.preventDefault();
				$('#animated_waveform').css("background-position-x", "10px");
			})
		});

		$( "#welcome_div" ).mouseenter(function(e) {
			e.preventDefault();
		  arrow.fadeIn(300);
		});
	   function runIt() {
	       arrow.animate({top:'+=20'}, 800);
	       arrow.animate({top:'-=20'}, 800, runIt);
	   }
	   runIt();
	   
	}());
</script>